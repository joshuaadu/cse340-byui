<% if (title) { %>
<h1 class="class-heading"><%= title %></h1>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<div class="login-wrapper">
  <%- messages() %>
  <form class="login-form" action="/account/login" method="post">
    <div class="form-group">
      <label for="account_email">Email</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        class="form-control"
        required
        value="<%= locals.account_firstname %>"
      />
    </div>
    <div class="form-group">
      <label for="account_password">Password</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        class="form-control"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        value="<%= locals.account_lastname %>"
      />
      <div>
        Password must be at least 12 characters and has at least 1 uppercase
        character, 1 number and 1 special character.
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <p>
      No account? <a class="register-link" href="/account/register">Sign-up</a>
    </p>
  </form>
</div>
<script src="/js/script.js"></script>
<% } else { res.redirect('/') } %>
