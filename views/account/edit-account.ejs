<% if (title) { %>
<h1 class="class-heading"><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>

<% } %>

<div class="login-wrapper">
  <form class="login-form" action="/account/update" method="post">
    <div class="form-group">
      <label for="first_name">First name</label>
      <input
        type="text"
        id="account_firstname"
        name="account_firstname"
        class="form-control"
        required
        value="<%= locals.accountData.account_firstname %>"
      />
      
    </div>
    <div class="form-group">
      <label for="account_lastname">Last name</label>
      <input
        type="text"
        id="account_lastname"
        name="account_lastname"
        class="form-control"
        required
        value="<%= locals.accountData.account_lastname %>"
      />
    <div class="form-group">
      <label for="account_email">Email</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        class="form-control"
        required
        placeholder="Enter a valid email address"
        value="<%= locals.accountData.account_email %>"
      />
    </div>
    <input type="hidden" name="inv_id" value="<%= locals.accountData.account_id %>" />
    <button type="submit" class="btn btn-primary">Update Account</button>
  </form>


  <form style="margin-top: 3rem;" class="login-form" action="/account/password" method="post">
    <div class="form-group">
      <label for="account_password">Password</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        class="form-control"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
      <div>*Note your original password will be changed.</div>
      <div>Password must be at least 12 characters and has at least 1 uppercase character, 1 number and 1 special character.</div>
    </div>
    <input type="hidden" name="inv_id" value="<%= locals.accountData.account_id %>" />
    <button type="submit" class="btn btn-primary">Change Password</button> 
  </form>
</div>
<script src="/js/script.js"></script>
<% } else { res.redirect('/') } %> 
